{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
    "plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": [
		"prettier",
		"react"
	],
	"rules": {
		"prettier/prettier": "error",
		"react/jsx-indent-props": ["error", 2],

		"react/prefer-es6-class": ["error", "always"],
		"react/prop-types": 0,
		"react/jsx-filename-extension": ["error", { "extensions": [".jsx"] }]
	}
}